<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Lista de usuarios</title>
    <%- include('header') %>
</head>
<body>
    <div class="container my-4">
        <h1>Lista de usuarios</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Edad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach(function(usuario) { %>
                    <tr>
                        <td><%= usuario.id %></td>
                        <td><%= usuario.nombre %></td>
                        <td><%= usuario.apellido %></td>
                        <td><%= usuario.email %></td>
                        <td><%= usuario.edad %></td>
                        <td>
                            <a href="/editar/<%= usuario.id %>" class="btn btn-primary btn-sm">Editar</a>
                            <form action="/eliminar/<%= usuario.id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <a href="/agregar" class="btn btn-success btn-lg">Agregar usuario</a>
    </div>
</body>
</html>
