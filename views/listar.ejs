<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Lista de usuarios</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha512-7cFTJWj/8t51w1tEZGWkHvNdyWnPFJFZ49+9X83bznFh57voHZZD7k/mw3q+4fwVz5mYl8/ZVzR9+uB+VRixg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <%- include('header') %>
</head>
<body>
    <div class="container my-4">
        <h1>Lista de usuarios</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Edad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach(function(usuario) { %>
                    <tr>
                        <td><%= usuario.id %></td>
                        <td><%= usuario.nombre %></td>
                        <td><%= usuario.apellido %></td>
                        <td><%= usuario.email %></td>
                        <td><%= usuario.edad %></td>
                        <td>
                            <a href="/editar/<%= usuario.id %>" class="btn btn-primary btn-sm">Editar</a>
                            <form action="/eliminar/<%= usuario.id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <a href="/agregar" class="btn btn-success btn-lg">Agregar usuario</a>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-5OJ7NodS+5J6Uv+B31WJ9womjG6Ux3fA3vrKL/lKjGAIQrNYO3mt2gT8iuC/uxYT0TJjruTbYs6sJWfZMnH9AA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js" integrity="sha512-IfUxLBxUzstAMVPF8AzYIcZrUsMfhq57/lv7UCuK+db2VDDb4h3ODaV7+uYzRZC7SshX9B+GEm8NjKwof51ENw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>
